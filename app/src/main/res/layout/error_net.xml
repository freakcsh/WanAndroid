<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <RelativeLayout
        android:id="@+id/net_error_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4AEA2F">

        <ImageView
            android:id="@+id/net_error_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/net_error" />

        <TextView
            android:id="@+id/net_error_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/net_error_img"
            android:text="@string/net_error_prompt"
            android:textColor="@color/c_ffffff"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>
