<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/img_classify_bg"
            android:layout_width="120dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_classify_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="30"
                android:paddingTop="10dp"
                android:text="111212545454545645645645645645645645645645"
                android:textColor="@color/c_1a1a1a" />

            <TextView
                android:id="@+id/tv_classify_context"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:maxLength="30"
                android:paddingTop="10dp"
                android:text="111212545454545645645645645645645645645645"
                android:textColor="@color/c_1a1a1a" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_classify_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:maxLength="30"
                    android:text="1115645"
                    android:textColor="@color/c_1a1a1a" />

                <TextView
                    android:id="@+id/tv_classify_author"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:maxLength="30"
                    android:text="1115645"
                    android:textColor="@color/c_1a1a1a" />

                <ImageView
                    android:id="@+id/img_classify_item_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/select_collage" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>