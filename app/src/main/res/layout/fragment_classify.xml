<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_132737"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/c_1b364d"
        app:tabIndicatorColor="@color/c_4be5e4"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/c_4be5e4"
        app:tabTextAppearance="@style/TabLayoutStyle"
        app:tabTextColor="@color/tab_text_uns" />

    <android.support.v4.view.ViewPager
        android:id="@+id/class_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>