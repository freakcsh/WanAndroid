<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="125dp"
    android:background="@drawable/catloading_background">

    <RelativeLayout
        android:id="@+id/loadingTop_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/mouse"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@mipmap/catloading_mouse" />

        <ImageView
            android:id="@+id/cat"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@mipmap/catloading_logo" />

        <ImageView
            android:id="@+id/eye_left"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/catloading_eyes"
            android:visibility="gone" />

        <com.example.a74099.wanandroid.util.EyelidView
            android:id="@+id/eyelid_left"
            android:layout_width="14dp"
            android:layout_height="10dp"
            android:layout_marginLeft="3.5dp"
            android:layout_marginTop="9dp"
            android:src="@mipmap/catloading_eyes"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/eye_right"
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="6.5dp"
            android:src="@mipmap/catloading_eyes"
            android:visibility="gone" />

        <com.example.a74099.wanandroid.util.EyelidView
            android:id="@+id/eyelid_right"
            android:layout_width="14dp"
            android:layout_height="10dp"
            android:layout_marginLeft="18.5dp"
            android:layout_marginTop="9dp"
            android:src="@mipmap/catloading_eyes"
            android:visibility="gone" />
    </RelativeLayout>


    <com.example.a74099.wanandroid.view.thirdview.catloading.GraduallyTextView
        android:id="@+id/graduallyTextView"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/loadingTop_ly"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-30dp"
        android:text="L O A D I N G ..."
        android:textColor="@color/c_ffffff"
        android:textSize="8sp"
        android:textStyle="bold" />


</RelativeLayout>